	<p><%= @question.body %></p>
  <h4><small>Submitted by <%= @question.student_id %></small></h4>
</div>



<% if @question.student_id == current_student.id -%>
	<div class="btn-group">
		<%= link_to 'Edit', edit_question_path(@question), class: "btn btn-default" %>
